<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MusicApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Color -->
        <item name="colorPrimary">#1DB954</item> <!-- Fresh Green -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text on Primary -->

        <!-- Secondary Color -->
        <item name="colorSecondary">#6200EE</item> <!-- Rich Purple for accents -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- White text on Secondary -->

        <!-- Background Colors -->
        <item name="android:background">#FFFFFF</item> <!-- Light background -->
        <item name="colorSurface">#F5F5F5</item> <!-- Light gray for cards and surfaces -->
        <item name="colorOnSurface">#000000</item> <!-- Black text on surfaces -->

        <!-- Error Color -->
        <item name="colorError">#B00020</item> <!-- Deep red for errors -->
        <item name="colorOnError">#FFFFFF</item>

        <!-- Text and Content Colors -->
        <item name="colorOnBackground">#212121</item> <!-- Dark text on light background -->
        <item name="colorPrimaryContainer">#E8F5E9</item> <!-- Light green container -->
        <item name="colorOnPrimaryContainer">#1B5E20</item> <!-- Deep green text in container -->

        <!-- Accent Colors -->
        <item name="colorTertiary">#FF4081</item> <!-- Bright pink for accents -->
        <item name="colorOnTertiary">#FFFFFF</item> <!-- White on pink -->

        <item name="colorPrimaryVariant">#1AA34A</item> <!-- Slightly darker green -->
        <item name="colorSurfaceVariant">#EEEEEE</item> <!-- Light gray for nav bar or bottom sheet -->
        <item name="colorOnSurfaceVariant">#333333</item> <!-- Dark gray text on variant surfaces -->
    </style>



</resources>

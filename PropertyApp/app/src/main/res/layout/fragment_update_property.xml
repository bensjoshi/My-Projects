<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Property Details Section -->
        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/md_theme_surfaceVariant"
            android:hint="Description"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurface" />

        <EditText
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editPostcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postcode"
            android:inputType="textPostalAddress"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <!-- Tenant Details Section -->
        <EditText
            android:id="@+id/editTenantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tenant Name"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editContactEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editDepositAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deposit Amount"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editRentPerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rent Per Month"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Date"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extra Information"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:background="@color/md_theme_surfaceVariant"
            android:textColorHint="@color/md_theme_onSurface"
            android:layout_marginTop="16dp"/>

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/propertyImageView"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera" />

        <!-- Button to pick image -->
        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/md_theme_primary"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_upload"
            app:iconTint="@color/md_theme_onPrimary"
            app:iconPadding="8dp" />


        <!-- Save Changes Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/md_theme_primary"
            android:text="Save Changes"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_tick"
            app:iconTint="@color/md_theme_onPrimary"
            app:iconPadding="8dp"/>

    </LinearLayout>

</android.widget.ScrollView>

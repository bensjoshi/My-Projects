<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".AddPropertyFragment">

    <!-- LinearLayout to hold all form components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbars="none">

        <!-- Property Image -->
        <ImageView
            android:id="@+id/PropertyImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Selected Property Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_upload"
            android:layout_gravity="center_horizontal" />

        <!-- Image Upload Button -->
        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/md_theme_primary"
            android:padding="16dp"
            android:text="Upload Property Image"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_upload"
            app:iconTint="@color/md_theme_onPrimary" />

        <!-- Description input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provide a brief description"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Address input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property address"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Postcode input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPostcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter postcode"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Tenant Name input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etTenantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter tenant name"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Contact Number input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etContactNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter contact number"
            android:inputType="phone"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />



        <!-- Contact Email input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etContactEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter contact email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Deposit Amount input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etDepositAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter deposit amount (£)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Rent Per Month input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etRentPerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter rent per month (£)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Start Date input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter tenancy start date "
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Tenancy End Date input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter tenancy end date"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <!-- Extra Information input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter any extra information"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColor="@color/md_theme_onBackground"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            android:backgroundTint="@color/md_theme_surface"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/md_theme_primary"
            android:padding="16dp"
            android:text="Add Property"
            android:textColor="@color/md_theme_onPrimary"
            app:icon="@drawable/ic_tick"
            app:iconTint="@color/md_theme_onPrimary"
            app:iconPadding="8dp" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>

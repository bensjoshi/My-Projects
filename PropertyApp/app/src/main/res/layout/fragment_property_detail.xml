<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/PropertyImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Property Image"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_default_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/propertyAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Property Address"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Postcode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postcode:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/postcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Postcode"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Property Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/propertyDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Property Description"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>
        <!-- Tenant Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenant Name:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tenantName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tenant Name"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Contact Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/contactNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>



        <!-- Contact Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Email:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/contactEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Contact Email"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Deposit Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposit Amount:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/depositAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Deposit Amount"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Rent Per Month -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Per Month:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/rentPerMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rent Per Month"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Start Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- End Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/endDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Extra Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra Information:"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/extraInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Extra Information"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onBackground"
                android:layout_weight="1"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/md_theme_primary"
            android:padding="12dp"
            android:text="Edit Property"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:elevation="4dp"
            app:icon="@drawable/ic_edit"
            app:iconPadding="8dp"
            app:iconTint="@color/md_theme_onPrimary"
            app:rippleColor="@color/md_theme_onSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/md_theme_error"
            android:padding="12dp"
            android:text="Delete Property"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:elevation="4dp"
            app:icon="@drawable/ic_delete"
            app:iconPadding="8dp"
            app:iconTint="@color/md_theme_onError"
            app:rippleColor="@color/md_theme_onSurface" />

    </LinearLayout>
</ScrollView>
